@model List<DTO.FlightDTO>

<div class="container mt-5">
    <div class="text-center">
        <h4 class="title">Flight Search Results</h4>
        <p class="subtitle">Find the best flights at the best prices</p>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center mt-4 shadow-sm" role="alert">
            <strong>No flights found!</strong> Please try a different search.
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Logo</th>
                        <th>Source</th>
                        <th>Destination</th>
                        <th>Departure</th>
                        <th>Seat Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@Url.Content("~/images/" + System.IO.Path.GetFileName(flight.FlightImage))" class="flight-logo">
                            </td>
                            <td>@flight.Source</td>
                            <td>@flight.Destination</td>
                            <td>@flight.DepartureDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <form method="get" action="@Url.Action("Details", "Flight")" class="seat-form">
                                    <input type="hidden" name="id" value="@flight.FlightId" />
                                    <div class="seat-selection">
                                        <select name="seatType" class="custom-dropdown">
                                            <option value="Economy">Economy</option>
                                            <option value="Business">Business</option>
                                            <option value="First Class">First Class</option>
                                        </select>
                                        <button type="submit" class="custom-btn">
                                            <i class="fas fa-info-circle"></i> View Details
                                        </button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    /* Apply color palette */
    body {
        background: linear-gradient(to bottom right, #F2EFE7, #9ACBD0);
        font-family: 'Poppins', sans-serif;
    }

    .title {
        margin-top:20px;
        font-size: 28px;
        font-weight: bold;
        color: #48A6A7;
        /* color: black; */
        letter-spacing: 1px;
    }

    .subtitle {
        color: #2973B2;
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 20px;
    }

    /* Custom Table Styling */
    .table-container {
        max-width: 100%;
        overflow-x: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead {
            background: #2973B2;
            color: white;
            text-align: center;
        }

        .custom-table th, .custom-table td {
            padding: 14px;
            text-align: center;
            font-size: 15px;
            font-weight: 500;
        }

        /* Alternate row colors */
        .custom-table tbody tr:nth-child(even) {
            background: #9ACBD0;
            color: #fff;
        }

        .custom-table tbody tr:nth-child(odd) {
            background: #F2EFE7;
            color: #333;
        }

        /* Row hover effect */
        .custom-table tbody tr:hover {
            background: #48A6A7;
            color: white;
            transform: scale(1.02);
            transition: all 0.3s ease-in-out;
        }

    /* Logo Styling */
    .flight-logo {
        max-width: 60px;
        border-radius: 8px;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
    }

    /* Align dropdown and button together */
    .seat-selection {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px; /* Adjust the spacing between dropdown and button */
    }

    .custom-dropdown {
        padding: 8px;
        border-radius: 8px;
        border: 1px solid #48A6A7;
        background: white;
        font-weight: bold;
        cursor: pointer;
    }

    .custom-btn {
        background: #2973B2;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease-in-out;
        font-weight: bold;
    }

        .custom-btn:hover {
            background: white;
            color:black;
            transform: scale(1.05);
        }

</style>

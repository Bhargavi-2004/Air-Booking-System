        padding: 0;
    }

    /* Heading Styles */
    h2, h3 {
        color: #3674B5;
        text-align: center;
        font-weight: 700;
        margin-bottom: 20px;
    }

    /* Table Styles */
    .table {
        width: 80%;
        margin: 20px auto;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    /* Table Header */
    .table-bordered th {
        background-color: #578FCA; /* Medium Blue */
        color: white;
        padding: 12px;
        text-align: left;
        font-size: 16px;
    }

    /* Table Cells */
    .table-bordered td {
        padding: 12px;
        border: 1px solid #A1E3F9; /* Light Blue */

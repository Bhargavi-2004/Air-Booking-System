@model DTO.BookingDTO

@{
    ViewData["Title"] = "SubmitGuestDetails";
}

<h2>Confirm Your Booking</h2>

<table class="table table-bordered">
    <tr>
        <th>Flight ID</th>
        <td>@Model.FlightId</td>
    </tr>
    <tr>
        <th>Flight Name</th>
        <td>@Model.FlightName</td>
    </tr>
    <tr>
        <th>Source</th>
        <td>@Model.Source</td>
    </tr>
    <tr>
        <th>Destination</th>
        <td>@Model.Destination</td>
    </tr>
    <tr>
        <th>Departure Time</th>
        <td>@Model.DepartureTime.ToString("f")</td>
    </tr>
    <tr>
        <th>Seat Type</th>
        <td>@Model.SeatType</td>
    </tr>
    <tr>
        <th>Number of Passengers</th>
        <td>@Model.NumberOfPassengers</td>
    </tr>
    <tr>
        <th>Total Price</th>
        <td>$@Model.TotalPrice</td>
    </tr>
</table>

<h3>Guest Details</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guest in Model.Guests)
        {
            <tr>
                <td>@guest.Name</td>
                <td>@guest.Age</td>
                <td>@guest.Gender</td>
            </tr>
        }
    </tbody>
</table>

@using (Html.BeginForm("Payment", "Booking", FormMethod.Post))
{
    @Html.HiddenFor(model => model.BookingId)  <!-- Added BookingId -->
    @Html.HiddenFor(model => model.FlightId)
    @Html.HiddenFor(model => model.SeatType)
    @Html.HiddenFor(model => model.NumberOfPassengers)
    @Html.HiddenFor(model => model.TotalPrice)

    <button type="submit"
            class="btn btn-primary">Proceed to Payment</button>
}

<style>
    /* General Styles */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #D1F8EF; /* Lightest Blue */
        color: #3674B5; /* Dark Blue */

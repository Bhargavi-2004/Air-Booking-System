    }

    /* Guest Table Styling */
    .table-striped tbody tr:nth-child(odd) {
        background-color: #A1E3F9; /* Lightest shade */
    }

    .table-striped tbody tr:nth-child(even) {
        background-color: white;
    }

    /* Button Styles */
    .btn-primary {
        display: block;
        width: 200px;
        margin: 20px auto;

        text-align: center;
        margin: 0;
        padding: 0;
    }

    .success-container {
        background-color: #9ACBD0; /* Light Blue */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        display: inline-block;
        margin-top: 100px;
    }

